%fieldset.control-group
  %legend All Subjects
  - if @subjects.count > 0
    %table.table.table-stripped
      %thead
        %tr
          %th Name
          %th Limit
          %th Start at
          %th End at
          %th
          %th
          %th
      %tbody
      - @subjects.each do |subject|
        %tr
          %td= subject.name
          %td= subject.limit
          %td= subject.start_at
          %td= subject.end_at
          %td= link_to 'Show', subject
          %td= link_to 'Edit', edit_subject_path(subject)
          %td= link_to 'Destroy', subject, :confirm => 'Are you sure?', :method => :delete

  - else
    .well
      %p.text-center= t :no_data
  .form-actions
    = link_to 'New Subject', new_subject_path, :class => 'btn btn-primary'
