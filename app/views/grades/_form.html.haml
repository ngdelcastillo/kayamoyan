= form_for [@subject, @grade], :html => {:class => 'form-horizontal'} do |f|
  -if @grade.errors.any?
    #error_explanation
      %h2= "#{pluralize(@grade.errors.count, "error")} prohibited this grade from being saved:"
      %ul
        - @grade.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :grade, :class => "control-label"
    .controls
      = f.number_field :grade
  .control-group
    = f.label :quarter, :class => "control-label"
    .controls
      = f.text_field :quarter
  .form-actions
    = link_to 'Back', root_path, :class => "btn"
    = f.submit 'Save', :class => "btn btn-primary"
