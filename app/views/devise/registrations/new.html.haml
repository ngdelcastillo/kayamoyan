= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
  %fieldset.control-group
    = devise_error_messages!
    %legend Sign up
    .control-group
      = f.label :first_name, :class => "control-label"
      .controls
        = f.text_field :first_name, :class => "span3"
    .control-group
      = f.label :last_name, :class => "control-label"
      .controls
        = f.text_field :last_name, :class => "span3"
    .control-group
      = f.label :email, :class => "control-label"
      .controls
        = f.email_field :email, :class => "span3"
    .control-group
      = f.label :password, :class => "control-label"
      .controls
        = f.password_field :password, :class => "span3"
    .control-group
      = f.label :password_confirmation, :class => "control-label"
      .controls
        = f.password_field :password_confirmation, :class => "span3"
    .control-group
      = f.label :school, :class => "control-label"
      .controls
        = f.collection_select :school, School.all, :id, :name #["Marist","Don Bosco", "UP"]
    
    .control-group
      = f.label :role, :class => "control-label"
      .controls
        = f.select :role, ["Moderator","Teacher", "Parent", "Student"]
    .form-actions
      = f.submit "Sign up", :class => "btn btn-primary"
      %button.btn Cancel

= render "devise/shared/links"
