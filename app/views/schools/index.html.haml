%fieldset.control-group
  %legend All Schools
  - if @schools.count > 0
    %table.table.table-stripped
      %thead
        %tr
          %th Name
          %th Address
          %th Phone
          %th Website
          %th Sch type
          %th Religion
          %th
          %th
          %th
          %th
      %tbody
        - @schools.each do |school|
          %tr
            %td= school.name
            %td= school.address
            %td= school.phone
            %td= school.website
            %td= school.sch_type
            %td= school.religion
            %td= link_to 'Subjects', subjects_path
            %td= link_to 'Show', school
            %td= link_to 'Edit', edit_school_path(school)
            %td= link_to 'Destroy', school, :confirm => 'Are you sure?', :method => :delete

  - else
    .well
      %p.text-center= t :no_data
  .form-actions
    = link_to 'New School', new_school_path, :class => 'btn btn-primary'
